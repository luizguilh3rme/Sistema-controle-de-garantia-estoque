@model OntModel
@{
    ViewData["Title"] = "Detalhes do produto";
}

<head>
    <link rel="stylesheet" href="~/css/Ont.css" asp-append-version="true" />
</head>

<div class="text-center">

    <h2 class="display-4 Titulo_detalhes">Detalhes sobre Ont @Model.Nome</h2>

</div>

<br/>
<br />
<br />
    <div class="central-Detalhes">

    <div class="fundo_detalhes">
