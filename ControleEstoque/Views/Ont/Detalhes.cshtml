        <label for="nome">Nome: @Model.Nome</label>

    </div>
    <br/>
    <div class="form-group">
        <label for="mac">Mac: @Model.Mac</label>      
    </div>
    <br/>
    <div class="form-group">
        <label for="NumeroSerie">Número de série: @Model.NumeroSerie</label>   
    </div>
 
    </div>

    </div>
    <br/>
    <br/>
<a class="btn btn-secondary botao-Detalhes" asp-controller="Ont" asp-action="Index" role="button">Voltar</a>


