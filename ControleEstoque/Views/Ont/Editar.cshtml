@model OntModel

@{
    ViewData["Title"] = "Editar produtos";
}

<div class="text-center">
    <h1 class="display-4">Editar produto</h1>
</div>

<form asp-controller="Ont" asp-action="Alterar" method="post">

    @* Filtaro ID porem não ha necessidade de exibi-lo, mas precisa chama-lo na View para o botão de alterar funcionar *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
    </div>

    <div class="form-group">
        <label for="mac">Mac</label>
        <input type="text" asp-for="Mac" class="form-control" placeholder="Digite o mac do produto">
    </div>

    <div class="form-group">
        <label for="serie">Numero de serie</label>
        <input type="text" asp-for="NumeroSerie" class="form-control" placeholder="Digite o numero de série do produto">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Ont" asp-action="Index" role="button">Voltar</a>
</form>

