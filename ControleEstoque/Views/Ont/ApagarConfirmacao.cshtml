@model OntModel
@{
    ViewData["Title"] = "Confirmação apagar produtos";
}

<div class="text-center">
    <h3>Realmente deseja apagar o produto (@Model.Nome) ?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Ont" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" btn-block role="button" asp-controller="Ont" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>